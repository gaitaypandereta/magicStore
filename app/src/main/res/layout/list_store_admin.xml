<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:scaleType="fitCenter"
            android:src="@drawable/sube" />

        <TextView
            android:id="@+id/tv_admin_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_admin_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo de la foto"
            android:textAlignment="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1F1B1B"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_admin_cukis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/mg"
                android:textColor="#fff"
                android:textAlignment="center"
                android:text="0"/>

            <Button
                android:id="@+id/btn_ver_users"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="email"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>