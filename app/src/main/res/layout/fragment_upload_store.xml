<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/ed_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Tu nombre de usuario"
        android:inputType="text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/chooseImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/leonardo"/>


    <EditText
        android:id="@+id/ed_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Su descripción del post"
        android:inputType="text"/>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp" />
    
    <Button
        android:id="@+id/btn_choose_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="CHOOSE IMAGE"/>

    <Button
        android:id="@+id/btn_tu_desing"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="CREA TU PROPIO DISEÑO"/>

    <Button
        android:id="@+id/ulpoadBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPLOAD"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>